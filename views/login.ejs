<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>E-Queuing Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/w3.css">
    <script src="/w3.js"></script>
    <script src="/datetime.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
  </head>

  <style>
    body,h1,h2,h3,h4,h5,h6 {font-family: "Raleway", sans-serif}
    
    body, html {
      height: 100%;
      line-height: 1.8;
    }
    body{
      background-image: url(/images/mmsu-cit-front.jpg);
      position: relative;
      background-repeat: no-repeat;
      min-height: 100vh;
      background-position: center;
      padding: 100px 0 100px;
    }
    </style>
<body class="w3-lightgrey">
    <div class="w3-content" id="form" style="max-width:600px; margin-top: auto">
      <div class="w3-container">
           <form method="POST" class="w3-container w3-white w3-card-2 w3-margin w3-round-xlarge">
            <div class=" w3-center w3-margin">
              <img src="/images/MMSU & CIT Logo.png" style="width: 50%" id="logo-p">
            </div>
            
            <h2 class="w3-center"><b> LOG IN </b></h2>
            <form class="w3-container" action="post">
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" name="uname" id="username" required>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="psw" id="password" required>
              </div>
              <div class="form-text mb-3">Login for Administrative. Request to ict officals for credentials.</div>
              <hr style="border-top: 1px solid black;">
              <button class="w3-button w3-block w3-green w3-section w3-padding w3-round" type="submit">Login</button>
            </form>
          </div>
          </form>
      </div>
    </div>

    <!--- Modal login validation -->
    <div id="validation" class="w3-modal">
      <div class="w3-modal-content w3-animate-zoom w3-round-large" style="max-width:500px; margin-top: 40px">
        <div class="alert alert-warning" role="alert"> <%= msg %> 
          <button type="button" class="btn-close w3-right" onclick="document.getElementById('validation').style.display='none'"></button></div>
      </div>
    </div>                                 
    <!--- End of modal login validation-->

      <script>
        var ans = '<%- ans %>'
      if(ans == 'v') {
        w3.show('#validation')
      } 

        
      </script>
      <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>