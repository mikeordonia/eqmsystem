    <title>E-QMS Guidance Counselor/OSW Appointment</title>
</head>
  <style>
    body,h1,h2,h3,h4,h5,h6 {font-family: "Raleway", sans-serif}
    
    body, html {
      height: 100%;
      line-height: 1.8;
    }
    
    /* Full height image header */
    .bgimg-1 {
      background-position: center;
      background-size: cover;
      background-image: url(/images/mmsu-cit-front.jpg);
      min-height: 100%;
    }
    
    .w3-bar .w3-button {
      padding: 16px;
    }

    #appointment{
      background-image: url(/images/mmsu-cit-aerial.jpg);
      position: relative;
      min-height: 110vh;
      background-size: cover;
      background-position: center;
      padding: 250px 0 200px;
  }
  </style>
<body onload="startTime()"> 
    <!-- Navbar (sit on top) -->
    <div class="w3-top">
      <div class="w3-bar w3-white w3-card" id="myNavbar">
          <!-- Hide right-floated links on small screens and replace them with a menu icon -->
          <a href="javascript:void(0)" class="w3-bar-item w3-button w3-left w3-hide-large w3-hide-medium" onclick="w3_open()">
          <i class="fa fa-bars"></i></a>
              
          <a href="/" class="w3-bar-item w3-button w3-wide w3-hide-medium w3-hide-small">E-Queuing Management System</a>
          <a href="/" class="w3-bar-item w3-button w3-wide w3-hide-large w3-hide-small">E-QM System</a>
          <a href="/" class="w3-bar-item w3-button w3-wide w3-hide-large w3-hide-medium">E-Queuing Mgt. System</a>
          <!-- Right-sided navbar links -->
          <div class="w3-right w3-hide-small">
              <a href="/" class="w3-bar-item w3-button">HOME</a>
              <a href="/#about" class="w3-bar-item w3-button">ABOUT</a>
              <a href="/#offices" class="w3-bar-item w3-button"> OFFICES</a>
              <a href="/#team" class="w3-bar-item w3-button"> TEAM</a>
          </div>
      </div>
    </div>

  <!-- Sidebar on small screens when clicking the menu icon -->
  <nav class="w3-sidebar w3-bar-block w3-card w3-animate-left w3-hide-medium w3-hide-large" style="display:none; background-color: #116530; color: white" id="mySidebar">
    <a href="javascript:void(0)" onclick="w3_close()" class="w3-bar-item w3-button w3-large w3-padding-16">Close Ã—</a>
    <a href="/#home" class="w3-bar-item w3-button">HOME</a>
    <a href="/#about" class="w3-bar-item w3-button">ABOUT</a>
    <a href="/#offices" class="w3-bar-item w3-button"> OFFICES</a>
    <a href="/#team" class="w3-bar-item w3-button"> TEAM</a>
  </nav>

    <!-- Appointmnet Section -->
    <div class="w3-container w3-padding-64" id="appointment">
      <div class="w3-display-left w3-padding w3-col m8 l6" style="margin-top:30px">
        <div class="w3-container w3-green w3-padding">
          <h2><i class="fas fa-calendar-alt w3-margin-right"></i>Guidance Counselor/OSW Appointment</h2>
        </div>
        <div class="w3-container w3-white w3-padding-16">
          <form method="POST">
            <div class="w3-container">
              <p class="w3-row w3-right w3-padding-small" id="displayTIME"></p>
              <p class="w3-row w3-right w3-padding-small" id="displayDATE"></p>
              <input type="hidden" id="timeTodatabase" name="times" value="time">
              <input type="hidden" id="dateTodatabase" name="dates" value="date">  
            </div>
            <div class="form-floating mb-3">
              <input name="name" type="text" class="form-control" placeholder="Full Name" required>
              <label for="name">Full name</label>
            </div>
            <div class="row g-2">
              <div class="col-md">
                <div class="form-floating mb-3">
                  <select name="status" class="form-select" aria-label="Floating label" required>
                    <option value="">Select status</option>
                    <option value="Student">Student</option>
                    <option value="Guest">Guest</option>
                    <option value="Senior/Pwd">Senior/Pwd</option>
                  </select>
                  <label for="status">Status</label>
                </div>
              </div>
              <div class="col-md">
                <div class="form-floating">
                  <div class="form-floating mb-3">
                    <input name="email" type="email" class="form-control" placeholder="Email">
                    <label for="email">Email address</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="row g-2">
              <div class="col-md">
                <div class="form-floating mb-3">
                  <input name="date" type="date" class="form-control" id="datepicker" placeholder="Select Date" required>
                  <label for="date">Schedule date</label>
                </div>
              </div>
              <div class="col-md">
                <div class="form-floating">
                  <div class="form-floating mb-3">
                    <select name="time" class="form-select" aria-label="Floating label" required>
                      <option value="">Select time</option>
                      <option value="8:00 - 9:00 AM">8:00 - 9:00 AM</option>
                      <option value="9:00 - 10:00 AM">9:00 - 10:00 AM</option>
                      <option value="10:00 - 11:00 AM">10:00 - 11:00 AM</option>
                      <option value="11:00 - 11:30 AM">11:00 - 11:30 AM</option>
                      <option value="1:00 - 2:00 PM">1:00 - 2:00 PM</option>
                      <option value="2:00 - 3:00 PM">2:00 - 3:00 PM</option>
                      <option value="3:00 - 4:00 PM">3:00 - 4:00 PM</option>
                      <option value="4:00 - 5:00 PM">4:00 - 5:00 PM</option>
                    </select>
                    <label for="time">Select Time</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-floating mb-3">
              <textarea class="form-control" name="purpose" rows="2" required></textarea>
              <label for="purpose">Purpose</label>
            </div>

            <div class="w3-center">
              <input class="w3-button w3-green w3-round-medium" style="width: 25%;" type="submit" formaction="/appointment_guidance" value="Submit">
            </div>
          </form>
        </div>
      </div>
    </div>

    <!--Modal for Success book-->
    <div id="successAppointed" class="w3-modal w3-animate-opacity">
        <div class="w3-modal-content w3-card-4 w3-round-large" style="max-width:700px;">
          <div class="w3-container" style="height:40px"> 
            <span onclick="w3.hide('#successAppointed')" 
            class="w3-button w3-display-topright">&times;</span>
          </div>
          <div class="w3-container">
            <div class="alert alert-success" role="alert"> Successfully book a appointment</div>
            <div class="w3-container" id="makepdf">
              <div class="w3-center">
                <img src="/images/MMSU & CIT Logo.png" alt="MMSU Logo" style="max-width: 30%;">
                <h2>Mariano Marcos State University</h2>
                <h3>College of Industrial Technology</h3>
              </div>
              <p class="">Location: Brgy 7B Nuestra Sra, De Natividad, Laoag City, 2900, Ilocos Norte, Philippines</p>
              <hr style="height: 2px; background-color:black">
              
              <div class="container w3-left">
                <p class="fs-5 fw-semibold text-front">Appointment Slip</p>
                <p class="fs-6 fst-italic text-front">Booked Ref #: <%= number%> <br> <%= bDate%> <%= bTime%></p>
              </div>
              <hr style="border-top: 1px solid black;">
              <p class="fs-5 fw-semibold text-frontx">Appointment Details</p>
              <div class="container mb-1">
                <div class="row">
                  <div class="col-3"><p class="fs-6 text-frontx">Name: </p></div>
                  <div class="col-9"><%= fullname%></div>
                </div>
              </div>
              <div class="container mb-1">
                <div class="row">
                  <div class="col-3"><p class="fs-6 text-frontx">Status: </p></div>
                  <div class="col-9"><%= appstatus%></div>
                </div>
              </div>
              <div class="container mb-1">
                <div class="row">
                  <div class="col-3"><p class="fs-6 text-frontx">Office: </p></div>
                  <div class="col-9">Guidance Counselor/OSW Office</div>
                </div>
              </div>
              <div class="container mb-1">
                <div class="row">
                  <div class="col-3"><p class="fs-6 text-frontx">Schedule: </p></div>
                  <div class="col-9"><%= sdate%><br><%= stime%></div>
                </div>
              </div>
              <div class="container mb-1">
                <div class="row">
                  <div class="col-3"><p class="fs-6 text-frontx"> Purpose:</p></div>
                  <div class="col-9"><%= spurpose%></div>
                </div>
              </div>
              <div class="container mb-1">
                <p>Reminders</p>
                <div class="row">
                  <div class="col-1"><p class="fs-6 text-frontx">1. </p></div>
                  <div class="col-11" style="text-align: justify;">Be at the MMSU CIT at least 30 minutes before your appointment schedule.</div>
                </div>
                <div class="row">
                  <div class="col-1"><p class="fs-6 text-frontx">2. </p></div>
                  <div class="col-11" style="text-align: justify;">Present your appointment slip (printed or digital copy) to the staff in-charge.</div>
                </div>
                <div class="row">
                  <div class="col-1"><p class="fs-6 text-frontx">3. </p></div>
                  <div class="col-11" style="text-align: justify;">Fill out the Request Form.</div>
                </div>
                <div class="row">
                  <div class="col-1"><p class="fs-6 text-frontx">4. </p></div>
                  <div class="col-11" style="text-align: justify;"> Prepare the necessary documents for the transaction.</div>
                </div>
              </div>
            </div>  
          </div>  
          <div class="w3-container w3-border-top w3-padding-16 text-end">
            <button type="button" id="download" class="btn btn-dark"> <i class="fas fa-file-download"></i> Download</button>
            <button type="button" class="btn btn-secondary" onclick="w3.hide('#successAppointed')">Close</button>
          </div>
        </div>
    </div>
    <!--end modal success book-->

    <!--- Modal for Weekend is not allowed-->
    <div id="notallowed" class="w3-modal">
      <div class="w3-modal-content w3-animate-zoom w3-round-large" style="max-width:500px; margin-top: 40px">
        <div class="alert alert-warning" role="alert"> Weekend is not allowed 
          <button type="button" class="btn-close w3-right" onclick="document.getElementById('notallowed').style.display='none'"></button></div>
      </div>
    </div>                                        
    <!--- End of Weekend is not allowed-->

    <script>
      var ans = '<%- ans %>'
      if(ans == 'success'){
        w3.show('#successAppointed')
      } else if (ans == 'failed') {
        w3.hide('#successAppointed')
      }

      //download pdf///
      var download = document.getElementById("download");
      var makepdf = document.getElementById("makepdf");

      download.addEventListener("click", function () {
          html2pdf().set({margin: [0.3,0.5,0.5,0.5], filename: '<%= fullname%> Appointment.pdf', html2canvas:  { scale: 2 }, jsPDF: { unit: 'in', format: 'A4', orientation: 'portrait' }}).from(makepdf).save();
      });

      //restrict can't select past date//
      document.getElementById('datepicker').min = new 
      Date(new Date().getTime() - new Date().getTimezoneOffset() * 60000).toISOString().split("T")[0];

      //weekend not allowd//
      const picker = document.getElementById('datepicker');
      picker.addEventListener('input', function(e){
        var day = new Date(this.value).getUTCDay();
        if([6,0].includes(day)){
          e.preventDefault();
          this.value = '';
          w3.show('#notallowed');
        }
      })

      function startTime() {
        var dateTime = new Date();
        var today = new Date();
        var hours = today.getHours();
        var minutes = today.getMinutes();

        var amPM = "AM";
        if(hours > 12){
          if(hours>= 12){
            amPM = "PM";
          }
          hours=hours-12;
        } else if (hours == 12) {
          if(hours>= 12){
            amPM = "PM";
          }
        }else if (hours == 0){
          hours=hours+12;
        }

        if(minutes < 10){
          minutes = "0" + minutes;
        }
        
        var time = hours + ":" + minutes + " " + amPM

        var theTIME = document.getElementById("timeTodatabase");
        theTIME.value = time;

        var theDATE = document.getElementById("dateTodatabase");
        theDATE.value = dateTime.toLocaleDateString();

        document.getElementById("displayTIME").innerHTML = time;
        document.getElementById("displayDATE").innerHTML = dateTime.toDateString();

        setTimeout(function clock(){
          startTime(),1000
        })
      }

      // Toggle between showing and hiding the sidebar when clicking the menu icon
      var mySidebar = document.getElementById("mySidebar");

      function w3_open() {
        if (mySidebar.style.display === 'block') {
          mySidebar.style.display = 'none';
        } else {
          mySidebar.style.display = 'block';
        }
      }

      // Close the sidebar with the close button
      function w3_close() {
        mySidebar.style.display = "none";
      }
    </script> 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
