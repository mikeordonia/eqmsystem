<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="/css/w3.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
  <style>
  html,body,h1,h2,h3,h4,h5 {font-family: "Raleway", sans-serif}
  </style>
  <title>E-QMS Administrative</title>
</head>
<body class="w3-light-grey">
  <!-- Top container -->
  <div class="w3-bar w3-top w3-large" style="z-index:4; background-color:#0B4619; color:white;">
    <button class="w3-bar-item w3-button w3-hide-large w3-hover-none w3-hover-text-light-grey" onclick="w3_open();"><i class="fa fa-bars"></i>  Menu</button>
    <span class="w3-bar-item w3-right">Administrative</span>
  </div>

  <!-- Sidebar/menu -->
  <nav class="w3-sidebar w3-collapse w3-white w3-animate-left" style="z-index:3;width:300px;" id="mySidebar"><br>
    <div class="w3-container w3-row">
      <div class="w3-col s4">
        <img src="/images/img_avatar.png" class="w3-circle w3-margin-right" style="width:46px">
      </div>
      <div class="w3-col s8 w3-bar">
        <span>Welcome to <strong>Guidance Counselor / OWS Office Administrative Panel</strong></span><br>
      </div>
    </div>
    <hr>
    <div class="w3-container">
      <h5>Dashboard</h5>
    </div>
    <div class="w3-bar-block">
      <a href="#" class="w3-bar-item w3-button w3-padding-16 w3-hide-large w3-dark-grey w3-hover-black" onclick="w3_close()" title="close menu"><i class="fa fa-remove fa-fw"></i>  Close Menu</a>
      <a href="/admin-guidance" class="w3-bar-item w3-button w3-padding">  Overview</a>
      <a href="/admin-queue-guidance" class="w3-bar-item w3-button w3-padding"><i class="fa fa-users fa-fw"></i>  Monitor Queue</a>
      <a href="/admin-appointment-guidance" class="w3-bar-item w3-button w3-padding w3-blue"><i class="	fa fa-list fa-fw"></i>  Appointment list</a>
      <a href="/view-queue-guidance"  target="_blank" class="w3-bar-item w3-button w3-padding"><i class="fa fa-eye fa-fw"></i>  View Queue</a>
      <a href="/login" class="w3-bar-item w3-button w3-padding"><i class="fa fa-sign-out"></i>  Log out</a>
    </div>
  </nav>


    <!-- Overlay effect when opening sidebar on small screens -->
    <div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

    <!-- !PAGE CONTENT! -->
    <div class="w3-main" style="margin-left:300px;margin-top:43px;">

      <div class="w3-container" id="adminheader" style="padding-top:22px">
        <h5><b> Guidance Counselor / OWS Office Appointment List</b></h5>
      </div>

      <div class="w3-container w3-responsive"  style="overflow-x: auto">
        <table class="w3-table w3-hoverable w3-white w3-bordered " id="tbl1">
            <thead style="background-color:#d26914; color:white;">
              <tr>
                <th class="w3-center"colspan="10">PENDING</b></th>
              </tr>
                <tr class="w3-tiny">
                    <th>Appointed Date</th>
                    <th>Appointed Time</th>
                    <th>Book ID</th>
                    <th>Full Name</th>
                    <th>Status</th>
                    <th>Email</th>
                    <th>Schedule Date</th>
                    <th>Schedule Time</th>
                    <th>Purpose</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="w3-tiny">
                <% rset1.forEach((user)=>{ %>
                    <tr class="item">
                        <td><%= user.bookDate %></td>
                        <td><%= user.bookTime %></td>
                        <td><%= user.bookid %></td>
                        <td><%= user.name %></td>
                        <td><%= user.status %></td>
                        <td><%= user.email %></td>
                        <td><%= user.schedDate %></td>
                        <td><%= user.schedTime %></td>
                        <td><%= user.purpose %></td>
                        <td>
                            <a href="/done-guidance/<%= user.bookid %>" class="w3-button w3-green w3-tiny w3-round-large">Done</a>
                            <a href="/delete-appointment-guidance/<%= user.bookid %>" class="w3-button w3-red w3-tiny w3-round-large">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
      </div>
      <hr>
      <div class="w3-container w3-responsive"  style="overflow-x: auto">
        <table class="w3-table w3-hoverable w3-white w3-bordered" id="tbl2">
            <thead style="background-color:#0eb00e; color:white;">
              <tr>
                <th class="w3-center"colspan="10">DONE</b></th>
              </tr>
                <tr class="w3-tiny">
                    <th>Appointed Date</th>
                    <th>Appointed Time</th>
                    <th>Book ID</th>
                    <th>Full Name</th>
                    <th>Status</th>
                    <th>Email</th>
                    <th>Schedule Date</th>
                    <th>Schedule Time</th>
                    <th>Purpose</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="w3-tiny">
                <% rset2.forEach((user)=>{ %>
                    <tr class="item">
                        <td><%= user.bookDate %></td>
                        <td><%= user.bookTime %></td>
                        <td><%= user.bookid %></td>
                        <td><%= user.name %></td>
                        <td><%= user.status %></td>
                        <td><%= user.email %></td>
                        <td><%= user.schedDate %></td>
                        <td><%= user.schedTime %></td>
                        <td><%= user.purpose %></td>
                        <td>
                            <a href="/appointment-pending-guidance/<%= user.bookid %>" class="w3-button w3-blue w3-tiny w3-round-large">Pending</a>
                            <a href="/delete-appointment-guidance/<%= user.bookid %>" class="w3-button w3-red w3-tiny w3-round-large">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
      </div>
      <!-- End page content -->
    </div>

    <!--- Modal delete -->
    <div id="deleted" class="w3-modal">
      <div class="w3-modal-content w3-animate-zoom w3-round-large" style="max-width:500px; margin-top: 40px">
        <div class="alert alert-success" role="alert"> Successfully deleted 
          <button type="button" class="btn-close w3-right" onclick="document.getElementById('deleted').style.display='none'"></button></div>
      </div>
    </div>                                 
    <!--- End of modal delete-->


    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

  <script>
    var ans = '<%- ans %>'
      if(ans == 'd'){
        w3.show('#deleted')
      }
  // Get the Sidebar
  var mySidebar = document.getElementById("mySidebar");

  // Get the DIV with overlay effect
  var overlayBg = document.getElementById("myOverlay");

  // Toggle between showing and hiding the sidebar, and add overlay effect
  function w3_open() {
    if (mySidebar.style.display === 'block') {
      mySidebar.style.display = 'none';
      overlayBg.style.display = "none";
    } else {
      mySidebar.style.display = 'block';
      overlayBg.style.display = "block";
    }
  }

  // Close the sidebar with the close button
  function w3_close() {
    mySidebar.style.display = "none";
    overlayBg.style.display = "none";
  }
  $(document).ready(function () {
    $('#tbl1').DataTable();
    $('#tbl2').DataTable();
  });
</script>

</body>
</html>
